extends template
block link
  -var selected = 'contact';
block content
  div.container
    div.about-padding
      div.row
        div.col-md-2
          h2.sectionTitle Contact
      div.row
        div.col-md-12
          // Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it!
          iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2884.9336494659333!2d-79.44197988416875!3d43.69114277912007!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b338e4bd477a3%3A0x611cd3db2b7f0a22!2s473+Oakwood+Ave%2C+York%2C+ON+M6C+2R5!5e0!3m2!1sen!2sca!4v1475203739783" width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0")
      div.row
        div.col-sm-12
          h3(class="pull-left contact-headers" id="greet") Let's Get In Touch!
          div.clearfix
          hr
      div.row
        div.col-sm-8
          form(role="form" method="POST" action="http://www.mainstreetcreativeco.com/contact-form-submission.phpx")
            div.row
              div(class="form-group col-lg-4")
                label(for="input1") Name
                input(type="text" name="contact_name" class="form-control" id="input1" required)
              div(class="form-group col-lg-4")
                label(for="input2") Email Address
                input(type="email" name="contact_email" class="form-control" id="input2" required)
              div(class="form-group col-lg-4")
                label(for="input3") Phone Number
                input(type="phone" name="contact_phone" class="form-control" id="input3" required)
              div.clearfix
              div(class="form-group col-lg-12")
                label(for="input4") Message
                textarea(name="contact_message" class="form-control" rows="6" id="input4" required)
              div(class="form-group col-lg-12")
                input(type="hidden" name="save" value="contact")
                button(type="submit" class="btn btn-primary") Submit
        div.col-sm-4
          h3.contact-headers Streak of Tigers
          p.contact-p
            | 473 Oakwood Ave <br />
            | Toronto, ON M6C 2R5
          p.contact-p
            i(class="fa fa-phone") &nbsp;
            abbr(title="Phone") P
            | : 416.259.4320
          p.contact-p
            i(class="fa fa-envelope-o") &nbsp;
            abbr(title="Email") E:
            a(href="mailto:info@nakaima.ca") &nbsp; info@nakaima.ca
          p.contact-p
            i(class="fa fa-clock-o") &nbsp;
            abbr(title="Hours") H:
            | &nbsp; Monday - Friday: 4:00 PM to 7:00 PM
            br
            i(class="fa fa-clock-o") &nbsp;
            abbr(title="Hours") H:
            | &nbsp; Saturday: 9:00AM to 11:00AM
block footer
  include footer.jade